<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:orientation="vertical"
    tools:context=".fragment.Fragment1">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/taylorserif"
        android:paddingTop="15dp"
        android:text="Ana Bin malik"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/urltr"
            android:layout_width="160dp"
            android:layout_height="145dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_custom"
            android:text="Transfer request"
            android:textColor="#f0f0f0"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/urlvi"
            android:layout_width="160dp"
            android:layout_height="145dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_custom"
            android:text="Vacations info."
            android:textAlignment="center"
            android:textColor="#f0f0f0"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


    <Button
        android:id="@+id/urlme"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Ministry of eduction / Teacher Info"
        android:textAlignment="center"
        android:textColor="#f0f0f0"
        android:textSize="18sp" />

    <Button
        android:id="@+id/urlat"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:text="Attendance (q8sch.net)"
        android:textAlignment="center"
        android:textColor="#f0f0f0"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/urlec"
            android:layout_width="160dp"
            android:layout_height="145dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_custom"
            android:text="Ethical Charter"
            android:textAlignment="center"
            android:textColor="#f0f0f0"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/urlrd"
            android:layout_width="160dp"
            android:layout_height="145dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_custom"
            android:text="Rights and Duties"
            android:textAlignment="center"
            android:textColor="#f0f0f0"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>